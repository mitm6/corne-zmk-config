#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT_L 0
#define ARROWS_L  1
#define NUMBERS_L 2


/ {

	behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };
        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        bindings = <
   &none     &kp Q         &kp W     &kp E   &kp R   &kp T               &kp Y    &kp U     &kp I       &kp O      &kp P              &none
   &none     &kp A         &kp S     &kp D   &kp F   &kp G               &kp H    &kp J     &kp K       &kp L      &hm APOS COLON     &none
   &none     &hm LCTRL Z   &kp X     &kp C   &kp V   &kp B               &kp N    &kp M     &kp COMMA   &kp DOT    &hm RCTRL FSLH     &none
           &kp RET &mo ARROWS_L &hm LSHFT SPACE                             &hm LSHFT RET &mo NUMBERS_L &hm LALT DEL
                        >;
                };

                arrows_layer {
                        bindings = < 
   &none   &kp FN1   &kp FN2   &kp FN3       &kp FN4       &kp FN5       &kp SCRL     &kp LCTRL &kp LSHFT   &kp TAB     &kp GRAVE      &none
   &none   &kp FN6   &kp FN7   &kp FN8       &kp FN9       &kp FN10      &kp PG_UP    &kp LEFT  &kp UP      &kp RIGHT   &kp APOS       &none
   &none   &kp FN11  &kp FN12  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_CLR    &kp PG_DOWN  &kp HOME  &kp DOWN    &kp END     &kp ESC        &none
                    	     &kp LCMD &none   &kp LSHFT                     &kp LGUI &kp LCTRL &kp  LALT
                        >;
                };

                numbers_layer {
                        bindings = <
   &none  &kp ESC    &hm EXCL N1  &hm AT N2    &hm HASH N3   &kp PLUS         &kp LGUI    &kp RCTRL  &kp LALT       &kp DEL       &kp BSPC    &none 
   &none  &kp LSHFT  &hm DLLR N4  &hm PRCNT N5 &hm CARET N6  &kp MINUS        &kp MINUS  &kp EQUAL  &kp LPAR      &kp RPAR      &kp BSLH    &none
   &none  &none      &hm AMPS N7  &hm STAR N8  &hm LPAR N9   &hm RPAR N10     &kp UNDER  &kp PLUS   &hm LBKT LBRC &hm RBKT RBRC &kp PIPE    &none
                    	  &kp DOT &kp STAR &kp FSLH                             &kp LGUI &none  &kp LSHFT
                        >;
                };
        };
};
